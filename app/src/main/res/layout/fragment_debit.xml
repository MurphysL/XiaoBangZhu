<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@color/debit_header_bg_color"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/debit_first_text"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp"
                android:text="马上登陆"
                android:textSize="18sp"
                android:textColor="@color/base_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:layout_below="@id/debit_first_text"
                android:text="查看信用额度"
                android:textSize="12sp"
                android:textColor="@color/base_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="@color/base_white"
                android:layout_centerVertical="true"
                android:layout_width="0.5dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="130dp"></LinearLayout>
            <TextView
                android:paddingRight="5dp"
                android:textColor="@color/base_white"
                android:text="最快3秒 极速到账"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            tools:listitem="@layout/debit_recycle_item"
            android:id="@+id/debit_recycle_view"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

   <RelativeLayout
       android:clickable="true"
       android:background="@color/transparent"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:layout_centerInParent="true"
           android:background="@drawable/shelter"
           android:layout_width="match_parent"
           android:layout_height="match_parent" />
   </RelativeLayout>

</FrameLayout>