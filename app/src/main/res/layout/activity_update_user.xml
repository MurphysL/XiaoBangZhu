<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">
    <LinearLayout
        android:id="@+id/titlebar"
        android:background="@color/base_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_action_bar_height">
        <ImageView
            android:id="@+id/update_back_btn"
            android:padding="7dp"
            android:src="@mipmap/ic_arrow_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:textSize="15sp"
            android:gravity="center"
            android:text="修改资料"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"/>

    </LinearLayout>

    <Button
        android:id="@+id/update_btn"
        android:background="@color/acivity_change_info_btn_bg"
        android:textColor="@color/base_white"
        android:text="确认修改"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="300dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_below="@+id/titlebar"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/base_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/update_header_btn"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:gravity="center_vertical"
                android:text="我的头像"
                android:layout_width="0dp"
                android:layout_weight="2.2"
                android:layout_height="match_parent" />

            <cn.finalteam.galleryfinal.widget.GFImageView
                android:id="@+id/update_header_img"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <include layout="@layout/commen_horizontal_line" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:gravity="center_vertical"
                android:text="昵称"
                android:layout_width="0dp"
                android:layout_weight="2.1"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/update_nick_name"
                android:textSize="15sp"
                android:hint="请输入昵称"
                android:background="@null"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>
        <include layout="@layout/commen_horizontal_line" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:gravity="center_vertical"
                android:text="性别"
                android:layout_width="0dp"
                android:layout_weight="2.1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/update_sex"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="15sp"
                android:hint="男"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <include layout="@layout/commen_horizontal_line" />

        <LinearLayout
            android:id="@+id/update_address"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:gravity="center_vertical"
                android:text="修改收货地址"
                android:layout_width="0dp"
                android:layout_weight="2.1"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="无"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/bottom_bar_publish"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>
        <include layout="@layout/commen_horizontal_line" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:gravity="center_vertical"
                android:text="我的学校"
                android:layout_width="0dp"
                android:layout_weight="2.1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/update_college"
                android:gravity="center"
                android:layout_weight="1"
                android:text="学校"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/bottom_bar_publish"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:gravity="center_vertical"
                android:text="学院/专业"
                android:layout_width="0dp"
                android:layout_weight="2.1"
                android:layout_height="match_parent" />
            <EditText
                android:background="@null"
                android:id="@+id/update_major"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="学院/专业"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/bottom_bar_publish"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>