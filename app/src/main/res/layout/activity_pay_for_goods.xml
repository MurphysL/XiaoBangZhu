<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/base_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/pay_for_goods_bg"
        android:layout_width="300dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="400dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/cancel"
                android:src="@drawable/cancel"
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:text="商品详情"
                android:textColor="@color/base_white"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="2.9"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>
            <ImageView
                android:src="@mipmap/ic_vip_door"
                android:layout_gravity="center_horizontal"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>

            <TextView
                android:text="柠檬水"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="订单号："
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="1234567890"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>

            <TextView
                android:text="*请滑动选择杯数以及外带or在店喝"
                android:textColor="@color/orange2"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <ImageView
            android:src="@drawable/pay_for_goods_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <!--<TextView-->
                    <!--android:id="@+id/pack"-->
                    <!--android:textColor="@color/pay_for_goods_grey"-->
                    <!--android:textSize="12sp"-->
                    <!--android:text="外带"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->
                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="20dp"></LinearLayout>-->

                <!--<TextView-->
                    <!--android:id="@+id/now"-->
                    <!--android:textSize="16sp"-->
                    <!--android:textColor="@color/pay_for_goods_black"-->
                    <!--android:text="现喝"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->
                <com.xiaobangzhu.xiaobangzhu.View.WheelView
                    android:id="@+id/wheel_method"
                    app:normalTextColor="@color/base_gray"
                    app:selectedTextColor="#585858"
                    app:lineColor="@color/base_white"
                    app:normalTextSize="12sp"
                    app:selectedTextSize="18sp"
                    app:itemNumber="2"
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent">

               <com.xiaobangzhu.xiaobangzhu.View.WheelView
                   android:id="@+id/wheel_num"
                   app:normalTextColor="@color/base_gray"
                   app:selectedTextColor="#585858"
                   app:lineColor="@color/base_white"
                   app:normalTextSize="14sp"
                   app:selectedTextSize="22sp"
                   app:itemNumber="3"
                   android:layout_width="40dp"
                   android:layout_height="match_parent" />

                <TextView
                    android:text="份"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:src="@drawable/pay_for_goods_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <Button
                android:text="立即支付:5元"
                android:background="@color/orange"
                android:textColor="@color/base_white"
                android:layout_width="120dp"
                android:layout_height="50dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>